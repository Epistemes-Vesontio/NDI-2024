{% extends 'private/base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/private/admin.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
  <script type="text/javascript" src="{{ asset('js/private/admin.js') }}" defer></script>
  <script>
        const users = {{ users|json_encode|raw }};
    </script>
    
{% endblock %}

{% block body %}
    <div class="side-container">
        <div class="search-bar">
            <form method="GET" action="{{ path('app_admin') }}" class="search-form">
                <input type="text" name="search" value="{{ app.request.get('search') }}" placeholder="Rechercher un utilisateur">
                <button type="submit">Rechercher</button>
            </form>
        </div>

        <table class="user-table">
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Rôle</th>
                <th>Actions</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>
                        <select data-user-id="{{ user.id }}" name="user-role">
                            <option value="default">Utilisateur par défaut</option>
                            <option {{ "ROLE_ADMIN" in user.roles ? "selected" : "" }} value="admin">Administrateur</option>
                        </select>
                    </td>
                    <td>
                        <svg class="save-icon" data-user-id="{{ user.id }}" data-edit-role-path="{{ path('app_admin_edit_user_role', {id: user.id, role: 'place_role'}) }}" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><path d="M64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V173.3c0-17-6.7-33.3-18.7-45.3L352 50.7C340 38.7 323.7 32 306.7 32H64zm0 96c0-17.7 14.3-32 32-32H288c17.7 0 32 14.3 32 32v64c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V128zM224 288a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
                        <a href="{{ path('app_admin_delete_user', {id: user.id}) }}">
                            <svg class="delete-icon" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

    <div class="side-container">
        <h2>Créer un utilisateur</h2>

        <form method="POST" action="{{ path('app_admin_create_user') }}">
            <input type="text" name="username" placeholder="Nom d'utilisateur">    
            <input type="password" name="password" placeholder="Mot de passe">    
            <button type="submit" >Créer</button>
        </form>
    </div>
{% endblock %}
