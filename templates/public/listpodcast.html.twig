{% extends 'public/base.html.twig' %}

{% block title %}Podcasts{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/public/podcast.css') }}">
{% endblock %}

{% block body %}
    <div class="podcast-list">
        <h1>Podcasts disponible</h1>
        {% for podcast in podcasts %}
            <div class="podcast-item">
                <a class="button" href="{{ path('podcast_view', {podcastName: podcast.name}) }}">
                <h2>{{ podcast.name }}</h2>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}